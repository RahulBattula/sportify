<div class="form-row">
  <div class="form-item">
    <label>Title</label>
    <input type="text" name="title" value="<%= player.title %>">
  </div>
  <div class="form-item">
    <label>Tournament</label>
    <select name="tournament">
      <% tournaments.forEach(tournament => { %>
        <% if (tournament.id === player.tournament) { %>
          <option selected label="<%= tournament.name %>" value="<%= tournament.id %>">
        <% } else { %>
          <option label="<%= tournament.name %>" value="<%= tournament.id %>">
        <% } %>
      <% }) %>
    </select>
  </div>
</div>

<div class="form-row">
  <div class="form-item">
    <label>Select Date</label>
    <input type="date" name="selectDate"
          value="<%= player.selectDate == null ? '' : player.selectDate.toISOString().split('T')[0] %>">
  </div>
  <div class="form-item">
    <label>Prizes Won</label>
    <input type="number" name="prizesWon" min="1" value="<%= player.prizesWon %>">
  </div>
</div>

<div class="form-row">
  <div class="form-item form-item-no-grow">
    <label>Cover</label>
    <input type="file" name="cover" class="player-cover filepond">
  </div>
  <div class="form-item">
    <label>Description</label>
    <textarea name="description"><%= player.description %></textarea>
  </div>
</div>